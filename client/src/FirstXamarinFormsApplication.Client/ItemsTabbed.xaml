<?xml version="1.0" encoding="UTF-8" ?>
<TabbedPage
    x:Class="FirstXamarinFormsApplication.Client.ItemsTabbed"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:client="clr-namespace:FirstXamarinFormsApplication.Client;assembly=FirstXamarinFormsApplication.Client">
    <TabbedPage.Children>
        <NavigationPage Title="List" Icon="Xamarin.png">
            <x:Arguments>
                <client:ListItemView BindingContext="{Binding .}" />
            </x:Arguments>
        </NavigationPage>
        <client:ItemView
            Title="First"
            BindingContext="{Binding Items[0]}"
            Icon="Xamarin.png" />
        <client:ItemView
            Title="Second"
            BindingContext="{Binding Items[1]}"
            Icon="Xamarin.png" />
        <client:ItemView
            Title="Third"
            BindingContext="{Binding Items[2]}"
            Icon="Xamarin.png" />
    </TabbedPage.Children>
</TabbedPage>
